@page "{id:int}"
@model SmartNature.API.Pages.Sensores.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href="~/bootstrap.min.css" />

<style>
    body {
        background-color: #e7f5ec;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .form-box {
        background-color: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 600px;
        border-left: 6px solid #28a745;
    }

    h2 {
        color: #28a745;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
    }

    .btn-save {
        background-color: #28a745;
        color: white;
        font-weight: 600;
        border: none;
    }

    .btn-save:hover {
        background-color: #218838;
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
        font-weight: 600;
        border: none;
    }

    .btn-back:hover {
        background-color: #5a6268;
    }
</style>

<div class="form-container">
    <div class="form-box">
        <h2>Editar Sensor</h2>

        <form method="post">
            <input type="hidden" asp-for="Sensor.Id" />

            <div class="mb-3">
                <label asp-for="Sensor.Nome" class="form-label"></label>
                <input asp-for="Sensor.Nome" class="form-control" />
                <span asp-validation-for="Sensor.Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sensor.Localizacao" class="form-label"></label>
                <input asp-for="Sensor.Localizacao" class="form-control" />
                <span asp-validation-for="Sensor.Localizacao" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-save">Salvar Alterações</button>
                <a asp-page="/Sensores/Index" class="btn btn-back">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
